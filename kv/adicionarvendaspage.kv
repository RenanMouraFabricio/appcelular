<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o Cliente"
            id: label_selecione_cliente

        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o Produto"
            id: label_selecione_produto

        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            id:label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: 01/01/2024"

        GridLayout:
            rows:1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1

            LabelButton:
                id: unidades_kg
                text:"Kg"
                on_release: app.selecionar_unidade("unidades_kg")
            LabelButton:
                id: unidades_unidades
                text:"Unidades"
                on_release: app.selecionar_unidade("unidades_unidades")
            LabelButton:
                id: unidades_litros
                text:"Litros"
                on_release: app.selecionar_unidade("unidades_litros")

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("homepage")
            text: "[color=#030312]Cancelar[/color]"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
            bold: True
            markup: True

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.adicionar_venda()
            text: "[color=#030312]Adicionar Venda[/color]"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2
            bold: True
            markup: True

        GridLayout:
            rows:1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075

            Label:
                text: "Valor (R$)"
                id: label_preco

            TextInput:
                id: preco
                hint_text: "Digite apenas n√∫meros"

        GridLayout:
            rows:1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075

            Label:
                text: "Quantidade"
                id: label_quantidade

            TextInput:
                id: quantidade
                hint_text: "0"

