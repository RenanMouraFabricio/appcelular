<AdicionarVendedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"
        Label:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True
            text: "Insira o [color=#FFD700]ID de outro vendedor[/color] para acompanha-lo"
            markup: True


        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
            text: "[color=#030312]Adicionar Vendedor[/color]"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.2
            bold: True
            markup: True


        TextInput:
            id: input_id_outrovendedor
            hint_text: "ID Vendedor"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1


        Label:
            id: mensagem_outrovendedor
            text: ""
            markup: True
            bold: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1


        # Voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FFD700")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")
