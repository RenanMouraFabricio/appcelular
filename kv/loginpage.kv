<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"

        Label:
            text: "CONTROLE DE [color=#FFD700]VENDAS ZELDA[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.9}
            size_hint: 0.8, 0.2

        TextInput:
            id: email
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1

        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1

        Label:
            id: mensagem_login
            text: "[color=#FFD700]Fa√ßa seu login[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.firebase.fazer_login(email.text, senha.text)
            text: "[color=#030312]Login[/color]"
            pos_hint: {"right": 0.45, "top": 0.3}
            size_hint: 0.4, 0.2
            bold: True
            markup: True

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.firebase.criar_conta(email.text, senha.text)
            text: "[color=#030312]Criar Conta[/color]"
            pos_hint: {"right": 0.95, "top": 0.3}
            size_hint: 0.4, 0.2
            bold: True
            markup: True
